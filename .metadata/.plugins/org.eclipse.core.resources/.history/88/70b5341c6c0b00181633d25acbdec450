package hw2;

import java.util.Scanner;

public class HumanPlayer implements Player {
	private int numChip;
	Scanner sc;
	
	public HumanPlayer(Scanner sc){
		numChip = 0;
		this.sc = sc;
	}
	
	public boolean decide(){
		return true;
	}
	public int getChip(){
		return numChip;
	}
	public void addChip(int n){
		numChip += n;
	}
}
