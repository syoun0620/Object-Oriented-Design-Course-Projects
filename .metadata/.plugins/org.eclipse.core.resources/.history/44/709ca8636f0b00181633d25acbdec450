package hw2;

public class TimidPlayer implements Player {
	private int numChip;
	private int playerId;
	
	public TimidPlayer(int i){
		this.numChip = 0;
		this.playerId = i;
	}
	public boolean decide(){
		return true;
	}
	public int getChip(){
		return numChip;
	}
	public void addChip(int n){
		numChip += n;
	}
	public int getPlayerId(){
		return this.playerId;
	}
}
